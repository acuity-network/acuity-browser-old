    "require-dir": "^1.0.0",
    "sass-loader": "^7.0.1",
    "spectron": "^4.0.0",
    "style-loader": "^0.23.0",
    "url-loader": "^1.1.1",
    "vue-html-loader": "^1.2.4",
    "vue-loader": "^15.4.2",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.5.16",
    "webpack": "^4.9.1",
    "webpack-dev-server": "^3.1.4",
    "webpack-hot-middleware": "^2.22.2",
    "webpack-merge": "^4.1.2"
  },
  "resolutions": {
    "ajv": "6.8.1",
    "nan": "2.12.1"
  }
}
